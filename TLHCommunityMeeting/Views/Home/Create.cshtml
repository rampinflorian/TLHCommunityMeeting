@model Question

@{
    ViewData["Title"] = "Création d'une question";
}

<p>Je souhaite poser une question : </p>

<form action="" method="post">
    <div class="form-group">
        <label asp-for="DiscordUserId"></label>
        <input asp-for="DiscordUserId">
    </div>
    <div class="form-group my-2">
        <label asp-for="QuestionText"></label>
        <textarea asp-for="QuestionText" rows="10" cols="100"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Envoyer</button>
</form>