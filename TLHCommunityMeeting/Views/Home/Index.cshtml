@model List<Question>
<div class="text-center">
    <h1 class="display-4">Question / Réponse</h1>
    <p class="lead">
        <a href="@Url.Action("Create", "Home")" class="btn btn-primary">Poser une question ?</a>

    <table id="table_id" class="display">
        <thead>
        <tr>
            <th>Utilisateur</th>
            <th>Question</th>
            <th>Réponse</th>
            <th>Date de création</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (Question q in Model)
        {
            <tr>
                <td>
                    @q.DiscordUserId
                </td>
                <td>
                    @q.QuestionText
                </td>
                <td>
                    @q.Answer
                </td>
                <td>
                    @q.CreatedAt.ToString("G")
                </td>
                @if(User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@q.QuestionId"><button class="btn btn-primary btn-sm">Répondre</button></a>
                    </td>
                }
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
}